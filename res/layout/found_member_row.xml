<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <ImageView
        android:id="@+id/ivAvatarFoundMember"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:src="@drawable/image_boarder"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvUserNameFoundMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivAvatarFoundMember"
        android:layout_toLeftOf="@+id/ivAvatarFoundMember"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#f90452"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvUserNickNameFoundMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvUserNameFoundMember"
        android:layout_below="@+id/tvUserNameFoundMember"
        android:text="Nick Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#60AC39" />

</RelativeLayout>