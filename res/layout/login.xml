<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:layoutDirection="rtl"
      android:background="@drawable/lsplash"
    	android:orientation="vertical" >
				
				<ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/llogo" />

				<TextView
				    android:id="@+id/txt_title"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/imageView1"
				    android:layout_centerHorizontal="true"
				    android:layout_marginTop="10dp"
				    android:textColor="#ffffff"
				    android:textSize="26dp"
				    android:text="@string/bt_signin_sign" />
				
				
				
				<EditText
                    android:id="@+id/e_uname"
                 	android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/txt_title"
                  	android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                  	android:background="@drawable/rounded_edittext"
                  	android:textAlignment="viewStart"
                  	android:gravity="right|center_vertical"
                  		android:textColor="#000000"
                  	android:textDirection="rtl"
                  	android:layout_marginLeft="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                 	android:layout_marginTop="20dp"
               		android:textSize="17dp"
                    android:padding="7dp"
                    android:hint="@string/et_signin_usernameoremail"
                    android:ems="10" />
				 	
    			 <EditText
        			android:id="@+id/e_pass"
     				android:layout_below="@+id/e_uname"
       				android:layout_width="match_parent"
        			android:layout_height="55dp"
         			android:layout_alignParentEnd="true"
          		    android:layout_alignParentRight="true"
                  	 android:background="@drawable/lgologin"
                  	android:textAlignment="viewStart"
                  	android:gravity="right|center_vertical"
                  	android:textDirection="rtl"
                  		android:textColor="#ffffff"
                  	android:layout_marginLeft="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                 	android:layout_marginTop="12dp"
               		android:textSize="17dp"
                    android:paddingRight="7dp"
                     android:paddingLeft="125dp"
                    android:inputType="textPassword"
                    android:hint="@string/et_signup_password"
                    android:ems="10"  />
 

    			<Button
       				android:id="@+id/b_signin"
       				android:layout_below="@+id/e_pass"
       				android:layout_width="match_parent"
       				android:layout_height="45dp"
        			android:gravity="right|center_vertical"
                  	android:textDirection="rtl"
      			   
       				android:layout_marginLeft="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                 	android:layout_marginTop="12dp"
                 	android:textColor="#ffffff"
                 	android:paddingRight="12dp"
                 	android:layout_centerVertical="true"
       			    android:text="@string/bt_signin_sign"
       			    android:background="@drawable/lbackgound_bottombar" />

   				 

   					 <Button
   					     android:id="@+id/bt_forgotpass"
   					     android:layout_width="wrap_content"
   					     android:layout_height="43dp"
   					     android:layout_marginTop="6dp"
   					     android:layout_marginLeft="4dp"
   					     android:textSize="12dp"
   					     android:textColor="#ffffff"
   					     android:padding="3dp"
   					     android:background="@drawable/lback"
   					     android:layout_alignLeft="@+id/e_pass"
   					     android:layout_alignTop="@+id/e_pass"
   					     android:text="@string/bt_signin_forgetpass" />

</RelativeLayout>