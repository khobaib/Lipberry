<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lsplash"
    android:layoutDirection="rtl"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/llogo" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/bt_signin_sign"
        android:textColor="#ffffff"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/e_uname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_title"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:text="mahbub"
        android:padding="7dp"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textDirection="rtl"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/e_pass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/e_uname"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/lgologin"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:text="1234"
        android:inputType="textPassword"
        android:paddingLeft="125dp"
        android:paddingRight="7dp"
        android:textAlignment="viewStart"
        android:textColor="#ffffff"
        android:textDirection="rtl"
        android:textSize="17dp" />

    <Button
        android:id="@+id/b_signin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/e_pass"
        android:layout_centerVertical="true"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/lbackgound_bottombar"
        android:gravity="right|center_vertical"
        android:paddingRight="12dp"
        android:text="@string/bt_signin_sign"
        android:textColor="#ffffff"
        android:textDirection="rtl" />

    <Button
        android:id="@+id/bt_forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/e_pass"
        android:layout_alignTop="@+id/e_pass"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/lback"
        android:padding="3dp"
        android:text="@string/bt_signin_forgetpass"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</RelativeLayout>