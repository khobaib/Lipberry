<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="462dp"
                android:background="@drawable/lsplash" >

                <EditText
                    android:id="@+id/txt_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Write topic"
                    android:padding="7dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textDirection="rtl"
                    android:textSize="24dp" >
                </EditText>

                <EditText
                    android:id="@+id/txt_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_topic"
                    android:layout_marginEnd="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Write topic text"
                    android:padding="7dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textDirection="rtl"
                    android:textSize="24dp" >
                </EditText>
                
                
                <EditText
                    android:id="@+id/txt_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_text"
                    android:layout_marginEnd="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="Tags"
                    android:padding="7dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textDirection="rtl"
                    android:textSize="24dp" >
                </EditText>

                <Spinner
                    android:id="@+id/spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tag"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_edittext"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                     android:layout_marginEnd="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/btn_select_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner_category"
                    android:layout_marginRight="22dp"
                    android:layout_marginStart="22dp"
                     android:layout_marginEnd="22dp"
                    android:layout_marginLeft="22dp"
                    android:textColor="#000000"
                    android:background="@drawable/rounded_edittext"
                    android:layout_marginTop="10dp"
                    android:text="Select Photo" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>