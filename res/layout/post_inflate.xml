<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e9e9e9"
   
  
    android:layoutDirection="rtl"
    android:orientation="vertical" >
    
   
 
    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:layoutDirection="rtl" >

        <ImageView
            android:id="@+id/img_pro_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"
            android:background="@color/gray70"
            android:padding="1.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/img_pro_pic"
            android:text="Lipberry"
            android:textColor="#c13468"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_date_other"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_user_name"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toLeftOf="@+id/img_pro_pic"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="13dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_some_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:src="@drawable/lcat_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_article_pro_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ldummy_image" />

    <TextView
        android:id="@+id/txt_articl_ename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_article_pro_pic"
        android:background="@drawable/ltopitext_holder"
        android:gravity="right|center_vertical"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_topic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_articl_ename"
        android:background="#ffffff"
        android:gravity="right|center_vertical"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/re_like_holder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/text_topic_text"
        android:background="@drawable/llholder_for_likeandcomment"
        android:layoutDirection="rtl" >

        <ImageView
            android:id="@+id/image_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/img_like"
            android:src="@drawable/comment" />

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/like" />
    </RelativeLayout>
	<View android:id="@+id/ve_like_holder"
        android:layout_width="match_parent"
        android:layout_below="@+id/re_like_holder"
        android:layout_height="2dp"
        android:background="#ffffff">
    </View>>
    

    <RelativeLayout
        android:id="@+id/re_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ve_like_holder"
    
        android:background="@drawable/llholder_for_likeandcomment"
        android:layoutDirection="rtl" >

        <TextView
            android:id="@+id/txt_like"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
              android:layout_marginRight="12dp"
           android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_loading"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_loading"
       android:layout_toRightOf="@+id/progress_loading"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:textSize="24dp"
        android:text="Image is Loading" />

    <ProgressBar
        android:id="@+id/progress_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_article_pro_pic"
        android:layout_alignLeft="@+id/et_comment"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="107dp" />

</RelativeLayout>