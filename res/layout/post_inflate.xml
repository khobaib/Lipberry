<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:layoutDirection="rtl"
    android:background="#ffffff" >

    <RelativeLayout
          android:id="@+id/re_top"
        android:layout_width="match_parent"
       android:layout_height="80dp"
        android:layout_alignParentLeft="true"
         android:layoutDirection="rtl"
         android:background="#ffffff"
        android:layout_alignParentTop="true"
       >

        <ImageView
            android:id="@+id/img_pro_pic"
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
             android:layout_alignParentStart="true"
           android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/img_pro_pic"
            android:textColor="#f90452"
            android:textSize="17dp"
            android:text="Lipberry" />

        <TextView
            android:id="@+id/text_date_other"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/text_user_name"
             android:layout_toLeftOf="@+id/img_pro_pic"
              android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            android:textSize="17dp"
           />

        

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_some_icon"
           android:layout_width="70dp"
            android:layout_height="74dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
             android:layout_alignParentEnd="true"
             android:background="@drawable/lcat_holder"
           android:src="@drawable/lcat_icon" />

    <ImageView
        android:id="@+id/img_article_pro_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        
        android:layout_below="@+id/re_top"
        android:layout_margin="2dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_articl_ename"
         android:layout_below="@+id/img_article_pro_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:background="@drawable/ltopitext_holder"
     	android:text="Android Topic name. " 
     	android:textColor="#ffffff"
     	android:padding="5dp"
     	android:textSize="24dp"/>

    <TextView
        android:id="@+id/text_topic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/txt_articl_ename"
       android:layout_marginTop="5dp"
       android:padding="5dp"
       android:background="#ffffff"
      android:gravity="right|center_vertical"
       android:textColor="#000000"
        	android:textSize="24dp"/>
    
   		 <RelativeLayout
          	android:id="@+id/re_like_holder"
       	 	android:layout_width="match_parent"
       		android:layout_height="wrap_content"
       		android:layout_below="@+id/text_topic_text"
       		android:layoutDirection="rtl"
       		android:background="@drawable/llholder_for_likeandcomment"
       	 >
        
   		      <ImageView
       				 android:id="@+id/image_comments"
        			 android:layout_width="wrap_content"
       				 android:layout_height="wrap_content"
       				 android:layout_margin="22dp"
       				 android:layout_toLeftOf="@+id/img_like"
       				 android:src="@drawable/comment" />

    			<ImageView
        			android:id="@+id/img_like"
       				android:layout_width="wrap_content"
      				android:layout_height="wrap_content"
      				android:layout_centerVertical="true"
      				android:layout_alignParentRight="true"
        			android:layout_marginRight="12dp"
        			android:background="@drawable/like"
        			/>
    </RelativeLayout>
    

   
  
    
    
     <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/rounded_edittext"
         android:layout_below="@+id/re_like_holder"
         android:textColor="#000000"
         android:gravity="right"
        android:hint="@string/et_type_your_comment_here"
        android:ems="10" >
      
    </EditText>
    
    <RelativeLayout
          android:id="@+id/re_bottom"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
      
       android:layout_below="@+id/et_comment"
        android:layoutDirection="rtl"
        android:background="@drawable/llholder_for_likeandcomment"
      >
	 <TextView
            android:id="@+id/txt_like"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:gravity="right|center_vertical"
            android:text="sam , hasan and 30 other like this"
            android:textColor="#000000"
            android:textSize="17dp" />
          <TextView
            android:id="@+id/text_comment"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
         	android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_margin="5dp"
            android:text="60 comments"/>

    </RelativeLayout>

</RelativeLayout>
