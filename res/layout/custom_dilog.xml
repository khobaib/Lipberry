<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layoutDirection="rtl"
    android:paddingTop="2dp"
       
    
    android:orientation="horizontal"
    android:background="#60AC39"
    >

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="-4dp"
        android:background="#ffffff"
        android:ems="10"
        android:padding="5dp"
        android:gravity="right"
       	android:textColorHint="#60AC39"
        android:hint="@string/txt_enter_your_comment"
        android:textColor="#60AC39"
        android:textSize="17dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/et_comment"
     
       android:layout_toLeftOf="@+id/bt_middle"
        android:background="#81212f"
        android:gravity="center"
        android:text="@string/txt_cancel"
        android:textColor="#60AC39"
        android:textSize="22dp" />

    <Button
        android:id="@+id/bt_middle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_comment"
        android:layout_centerHorizontal="true"
      
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:textColor="#60AC39"
        android:textSize="22dp" />

    <Button
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/et_comment"
      
        android:layout_toRightOf="@+id/bt_middle"
        android:background="#81212f"
        android:gravity="center"
        android:text="@string/txt_ok"
        android:textColor="#60AC39"
        android:textSize="22dp" />

</RelativeLayout>