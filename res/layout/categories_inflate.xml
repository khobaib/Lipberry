<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="#ffffff"
    android:layoutDirection="rtl"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_edittext"
        android:layoutDirection="rtl" >

     
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_big_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_category_pro_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/img_big_img"
        android:layout_below="@+id/img_big_img"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dp"
        android:paddingBottom="10dp"
       android:src="@drawable/l1" />

    <TextView
        android:id="@+id/txt_cat_name"
        android:layout_width="wrap_content"
        android:textColor="#f90452"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="hjfvefvfv"
         android:layout_marginTop="12dp"
         android:layout_marginBottom="12dp"
  		 android:layout_below="@+id/img_big_img"
    android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/img_category_pro_pic"
         />

</RelativeLayout>