<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:layoutDirection="rtl"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/e_activiate_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="right"
        android:hint="@string/et_signup_email"
        android:padding="7dp"
        android:textAlignment="viewStart"
        android:textDirection="rtl"
        android:textSize="24dp" >
    </EditText>

    <EditText
        android:id="@+id/e_activiate_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/e_activiate_email"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="right"
        android:hint="@string/et_signup_key"
        android:padding="7dp"
        android:textAlignment="viewStart"
        android:textDirection="rtl"
        android:textSize="24dp" >
    </EditText>

    <Button
        android:id="@+id/bt_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e_activiate_key"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Enter"
        android:textColor="#ffffff"
        android:textSize="22dp" />

</RelativeLayout>