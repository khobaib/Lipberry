<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#ffffff" >
    
    
    
    <ScrollView
    	    android:id="@+id/scrollView1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    >

    	    <LinearLayout
    	        android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	        android:orientation="vertical" >
    	        
    	        <RelativeLayout
    	             android:layout_width="wrap_content"
    	    		android:layout_height="wrap_content"
    	            >
    	            
    	             <RelativeLayout  
         android:id="@+id/re_Left"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="#657464">

        <TextView
            android:id="@+id/txt_num_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200" 
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/txt_seen_text"
            android:layout_toRightOf="@+id/txt_num_seen"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
              android:layout_margin="8dp"
            android:text="@string/txt_seen_by" />
        
          <TextView
            android:id="@+id/txt_num_following"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_below="@+id/txt_num_seen"
           
            android:text="200" 
            android:layout_margin="8dp"/>
          
          
            <TextView
            android:id="@+id/txt_following_text"
            android:layout_toRightOf="@+id/txt_num_seen"
            android:layout_below="@+id/txt_num_seen"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
              android:layout_margin="8dp"
            android:text="@string/txt_following" />
            
            
             <TextView
            android:id="@+id/txt_num_follower"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_below="@+id/txt_num_following"
           
            android:text="200" 
            android:layout_margin="8dp"/>
          
          
            <TextView
            android:id="@+id/txt_follower_text"
            android:layout_toRightOf="@+id/txt_num_follower"
            android:layout_below="@+id/txt_num_following"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
              android:layout_margin="8dp"
            android:text="@string/txt_following" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_num_follower"
                android:layout_centerHorizontal="true"
                android:text="Send" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_send"
                android:layout_centerHorizontal="true"
                android:text="Share" />
        
    </RelativeLayout>
    
    
    	<RelativeLayout
    	     android:id="@+id/re_right"
    	 android:layout_width="100dp"
    	 android:layout_alignParentRight="true"
    	android:layout_height="wrap_content"
    	
    	    
    	    >

    		<ImageView
    		    android:id="@+id/img_member_pic"
    		    android:layout_width="80dp"
    		    android:layout_height="65dp"
    		    android:scaleType="fitXY"
    		    android:layout_alignParentTop="true"
    		    android:layout_centerHorizontal="true"
    		    android:layout_marginTop="8dp"
    		    android:src="@drawable/ic_launcher" />

    		<Button
    		    android:id="@+id/btn_follow_her"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_alignRight="@+id/img_member_pic"
    		    android:layout_below="@+id/img_member_pic"
    		    android:layout_marginTop="14dp"
    		    android:text="@string/txt_follow_her" />
        
      </RelativeLayout>
      
    	<RelativeLayout
    	    android:id="@+id/re_mid"
    	    android:layout_toRightOf="@+id/re_Left"
    	    android:layout_toLeftOf="@+id/re_right"
    	 android:layout_width="match_parent"
    	android:layout_marginRight="8dp"
    	android:layout_marginLeft="8dp"
    	android:layout_marginStart="8dp"
    	android:layout_marginEnd="8dp"
    	android:layout_height="wrap_content"
    	
    	>

    		<TextView
    		    android:id="@+id/txt_name"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:gravity="right"
    		    android:layout_alignParentRight="true"
    		    android:layout_alignParentTop="true"
    		    android:layout_marginRight="15dp"
    		    android:layout_marginTop="14dp"
    		    android:textColor="#000000"
    		    android:text="name" />

    		<TextView
    		    android:id="@+id/txt_nick_name"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		     android:gravity="right"
    		       android:textColor="#000000"
    		    android:layout_alignRight="@+id/txt_name"
    		    android:layout_below="@+id/txt_name"
    		    android:layout_marginTop="11dp"
    		    android:text="nickname" />

    		<TextView
    		    android:id="@+id/txt_bio"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		     android:gravity="right"
    		       android:textColor="#000000"
    		    android:layout_alignLeft="@+id/txt_nick_name"
    		    android:layout_below="@+id/txt_nick_name"
    		    android:layout_marginTop="11dp"
    		    android:text="Biodata: some information" />

    	</RelativeLayout>
    	            
    	        </RelativeLayout>
    	        
    	        
    	        
    	        
    	    </LinearLayout>
    	</ScrollView>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
   
    	

</RelativeLayout>
